{% extends '@SonataAdmin/standard_layout.html.twig' %}

{% if action == 'create' or action == 'edit' %}
    {% form_theme form with [
        '@SonataAdmin/Form/form_admin_fields.html.twig',
        'Admin/Form/fields.html.twig'
        ] %}
{% endif %}

{% block sonata_top_nav_menu %}
    <div class="navbar-custom-menu">
        <ul class="nav navbar-nav">
            <li>
                <a href="{{ path('homepage') }}"><b>Homepage</b></a>
            </li>
            {% block sonata_top_nav_menu_add_block %}
                {{ parent() }}

            {% endblock %}
            <li class="dropdown user-menu">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    <i class="fa fa-user fa-fw"></i> <i class="fa fa-caret-down"></i>
                </a>
                <ul class="dropdown-menu dropdown-user">
                    <li class="user-header bg-light-blue">
                        <p>{{ app.user.username }}</p>
                    </li>

                    <li class="user-footer">
                        <div class="pull-right">
                            <a href="{{ path('app_admin_logout') }}" class="btn btn-default btn-flat"><i class="fa fa-sign-out fa-fw"></i> Logout</a>
                        </div>
                    </li>
                </ul>
            </li>
        </ul>
    </div>
{% endblock %}
